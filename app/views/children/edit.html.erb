<section class='intro'>
  <div class="col-sm-8 col-sm-offset-2 well clearfix">
  <h2>Edit your child's information:</h2>
    <%= form_for @child do |f| %>

        <%= f.text_field  :name, class:"form-control", placeholder:"Child's name" %> 
        </br>
        <%= f.text_area :bio, class:"form-control", placeholder:"Child's Information" %>
        </br>
        <%= f.date_field :birthday %>
        <br> 
        <p>Boy   <%= f.radio_button :gender, "male", :value => 'Male'%> </p>
        <p>Girl   <%= f.radio_button :gender, "female", :value => 'Female'%> </p>
        <%= f.submit "Update Profile", class:"btn close pull-right" %>

    <% end %>
  </div>
</section>