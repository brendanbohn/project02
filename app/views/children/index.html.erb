<h1>There are so many children!!!</h1>

<div class="container">
  <div class="row child_display">  
    <% @children.each do |child| %>
      <div class="col-sm-3">
        <div class="thumbnail">
            <div class="caption">

            <h3><%=child.name%></h3>
            <p><%= link_to "See Child Profile", child_path(child) %> </p>
            <!-- TODO: add how many posts there are per city -->
            </div>
        </div>
      </div>
    <% end %>
  </div> 
</div>
