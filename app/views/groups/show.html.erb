<!-- <section class='intro'> -->
  <!-- GROUP HEADER -->
  <div class="row">
      <h1 id="group-name"><%= "#{@group.name}" %><%=link_to "Edit Group Information", edit_group_path, class:"btn btn-sm btn-primary edit_group_btn" %><%= link_to "Add Members", edit_membership_path, class:"btn btn-sm btn-primary" %></h1>
      <h5 id="group-des"><%= "#{@group.description}" %></h5>
      <p class="no-of-members">X Members</p>
  </div>
  <!-- TABS -->
  <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
    <div class="mdl-tabs__tab-bar">
        <a href="#posts-panel" class="mdl-tabs__tab is-active">Posts</a>
        <a href="#members-panel" class="mdl-tabs__tab">Members</a>
        <a href="#events-panel" class="mdl-tabs__tab">Current Events</a>
    </div>
    <!-- POSTS TAB PAGE -->
    <div class="mdl-tabs__panel is-active" id="posts-panel">
      <div class="hidden">
        <h2>Conversations going on in this Group</h2>
        <p>This is a place where members can share ideas, articles, or other information to help other parents out.</p>
      </div>
      <h2>Parents conversations going on this group</h2>
      <% @posts.each do |post| %>
        <!-- <div class='col-sm-2'> -->
        <%= image_tag User.find(post.user_id).image, class:"user_img" %>
        <!-- </div> -->
        <!-- <div class='col-sm-8 well'> -->
          <!--post profile button -->
          <h3><%= link_to "#{post.title}", post_path(post) %></h3>
          <p><%=post.content%></p>
          <br>
          <hr>
        <!-- </div> -->
      <% end %>
    </div>
    <!-- MEMBERS TAB PAGE -->
    <div class="mdl-tabs__panel" id="members-panel">
      <h2>Members</h2>
      <%= link_to "Add Members", edit_membership_path, class:"btn btn-sm btn-primary" %>
      <p>List of all the current members of this group</p>
        
          <div class='col-sm-2'>
       
          </div>
          <div class='col-sm-8 well'>
            <!--post profile button -->
            <h3></h3>
      
      </div>
    </div>
    <!-- EVENTS TAB PAGE -->
    <div class="mdl-tabs__panel" id="events-panel">
      <h2>Current Events</h2>
      <p>Coordinate, carpools, play time or other events here.  Events can sync to your calendar of choice.</p>
    </div>
  </div>
