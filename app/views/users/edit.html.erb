<div class="col-sm-8 col-sm-offset-2 well">
  <h2>Edit your profile below:</h2>
  <%= form_for @user, html: { multipart: true } do |f| %>
    <p><strong>Full name:</strong></br>
    <%= f.text_field  :full_name, class:"form-control" %></p>
    <p><strong>Username:</strong></br>
    <%= f.text_area :username, class:"form-control" %></p>
    <p><strong>Location:</strong></br>
    <%= f.text_field :city, class:"form-control" %></p>
    <p><strong>Parenting Philosophy:</strong></br>
    <%= f.text_area :mission_statement, class:"form-control", :placeholder => "Enter your mission statement" %></p>
    <p><strong>Profile Picture (URL):</strong></br>
    <%= f.text_field :image, class:"form-control" %></p>
    <%= f.submit "Update Profile", class:"btn close pull-right" %>
  <% end %>
</div>

