<div class="user-card">
<% @users.each do |user| %>
	<div class="demo-card-wide mdl-card mdl-shadow--2dp">
		<div class="mdl-card__supporting-text">
			<div class="container">
				<div class="row"><!-- PARENT INFO ROW -->
					<div class="col-md-2">
						<%= image_tag "#{rand(7)}.png", :class => "avatar-parent" %>
					</div>
					<div class="col-md-7" id="parent-header">
						<h4 class="parent_name"><%= user[:username] %></h4>
						<h6><%= user[:city]  %></h6>
						<p><%= user[:bio]  %></p>
					</div>
				</div> <!-- end row -->
				<div class="child-section row">
				<% user.children.each do |child| %>
				  <div class="col-sm-5">
				    <div class="row">
				      <div class="col-sm-3">
				        <!-- Image goes here -->
				        <%= image_tag "#{rand(7)}.png", :class => "avatar-child" %>
				      </div>
				      <div class="col-sm-6">
				        <!-- Age, etc. goes here -->
				        <h5>
					        <%= child[:name] %>, 
					        <small><%= calculate_age(child[:birthday]) %></small>
				        </h5>
					<span class="hobbies-sec"><%= child[:bio] %></span>
				      </div>
				    </div>
				  </div>
				<% end %>

				</div> <!-- end child row -->
			</div> <!-- end container -->
		</div> <!-- close mdl-card__supporting-text -->
	  <div class="mdl-card__actions mdl-card--border">
	    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      View More
	    </a>
	  </div>
	</div> <!-- CLOSE CARD -->
<% end %>
</div>